@model PICTOCAM_SERVICE.BO.clsEventosModel
@{
    Layout = "~/Views/Shared/layoutA.cshtml";
}

<script type="text/javascript">
        function imagepreview(input) {
            var fildr = new FileReader();
            fildr.onload = function (e) {
                $('#imgprw').attr('src', e.target.result);
            }
            fildr.readAsDataURL(input.files[0]);

        }
        $('#')

        function Agregar() {
            var res = validar();
            if (res == false) {
                return false;
            }
            var userObj = {
                //ID1: $('#ID').val(),
                Titulo: $('#TituloEvento').val(),
                Descripcion: $('#DescripcionEvento').val(),
                Contenido: $('#ContenidoEvento').val(),
                Tipo: $('#TipoEvento').val(),
                

            };
            $.ajax({
                url: "/Evento/Agregar",
                data: JSON.stringify(userObj),
                type: "POST",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    loadData();
                    $('#addEvento').modal('hide');

                },
                error: function (errormenssage) {
                    alert(errormenssage.responseText);
                }
            });
        }





    ---------------------
        function CargarDatos(userID) {
            $('#TituloEvento').css('border-color', 'lightgrey');
            $('#DescripcionEvento').css('border-color', 'lightgrey');
            $('#ContenidoEvento').css('border-color', 'lightgrey');
            
            $.ajax({
                url: "/Evento/cargar/" + userID,
                type: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                    $('#ID').val(result.Id);
                    $('#TituloEvento').val(result.Titulo);
                    $('#DescripcionEvento').val(result.Descripcion);
                    $('#ContenidoEvento').val(result.Contenido);

                    $('#detalle').modal('show');
                    $('#detalle').show();
                    $('#btnAdd').hide();
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
            return false;
        }

        function Eliminar(ID) {
            var ans = $('#borrar').modal('show');
           // var ans = confirm("¿Esta seguro que desea eliminar este usuario?");
            if (ans) {
                $.ajax({
                    url: "/Evento/Eliminar/" + ID,
                    type: "POST",
                    contentType: "application/json;charset=UTF-8",
                    dataType: "json",
                    success: function (result) {
                        loadData();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }
        }


</script>

<div class="page-title">
    <div class="col-md-6">
        <h3>Eventos</h3>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">Búsqueda</label>
            </div>
            <div class="col-sm-9">
                <select class="form-control m-b-sm">
                    <option>Todo</option>
                    <option>Noticia</option>
                    <option>Tip</option>
                </select>
            </div>
        </div>
    </div>

    <button class="btn btn-instagram" data-toggle="modal" id="btnAdd" data-target="#addEvento">Agregar</button>

</div>

<!--Empieza el Modal agregar-->
@using (Html.BeginForm("agregar", "Evento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="modal fade bs-example-modal-lg" id="addEvento" tabindex="-1" role="dialog" aria-labelledby="titleNoticia" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="Evento">Crear Evento</h4>
            </div>

            <div class="modal-body">

                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Imagen</label>
                            <input type="file" id="fileEvento" onchange="imagepreview(this)" />
                        </div>

                        <div class="form-group">
                            <img src="~/Resources/Backend/images/coming-soon.jpg" id="imgprw" style="width:100%;" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                           @Html.TextBoxFor(model => model.Cls_EventoBo.Titulo, new { @class = "form-control", @rows = "1", @id = "TituloEvento", @placeholder = "Titulo" })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(model => model.Cls_EventoBo.Descripcion, new { @class = "form-control no-resize", @rows = "5", @id = "DescripcionEvento", @placeholder = "Descripción" })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(model => model.Cls_EventoBo.Contenido, new { @class = "form-control no-resize", @rows = "5", @id="ContenidoEvento", @placeholder = "Contenido" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-4">
                                <label class="control-label">Tipo de evento</label>
                            </div>
                            <div class="col-sm-8">
                                @{
                                    List<SelectListItem> listItems = new List<SelectListItem>();
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "Noticias",
                                        Value = "1"
                                    });
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "Tips",
                                        Value = "2",
                                        Selected = true
                                    });
                                }
                                @Html.DropDownListFor(model => model.Cls_EventoBo.Tipo, listItems, "-- Select Status --")
                            </div>
                        </div>

                    </div>

                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <input type="submit" class="btn btn-instagram" onclick="Agregar()" value="Guardar" />
            </div>
        </div>
    </div>
</div>
}
<!--Fin de Modal-->

