
@{
    Layout = "~/Views/Shared/layoutA.cshtml";
}

<script type="text/javascript">
        function imagepreview(input) {
            var fildr = new FileReader();
            fildr.onload = function (e) {
                $('#imgprw').attr('src', e.target.result);
            }
            fildr.readAsDataURL(input.files[0]);
        }
    $('#')

</script>

<div class="page-title">
    <div class="col-md-6">
        <h3>Eventos</h3>
    </div>
    <div class="col-md-5">
        <div class="form-group">
            <div class="col-md-3">
                <label class="control-label">Búsqueda</label>
            </div>
            <div class="col-sm-9">
                <select class="form-control m-b-sm">
                    <option>Todo</option>
                    <option>Noticia</option>
                    <option>Tip</option>
                </select>
            </div>
        </div>
    </div>

    <button class="btn btn-instagram" data-toggle="modal" data-target="#addEvento">Agregar</button>

</div>

<!--Empieza el Modal agregar-->
<div class="modal fade bs-example-modal-lg" id="addEvento" tabindex="-1" role="dialog" aria-labelledby="titleNoticia" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="Evento">Crear Evento</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="tituloEvento" placeholder="Titulo del evento" />
                </div>
                <div class="form-group">
                    <label class="control-label">Imagen</label>
                    <input type="file" id="fileEvento" onchange="imagepreview(this)" />

                </div>
                <div class="form-group">
                    <img src="~/Resources/Backend/images/zoom/small/image1.jpg" id="imgprw" style="width:100%;" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" placeholder="Breve descripción" id="descripcionEvento"></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" placeholder="Contenido del evento" id="contenidoEvento"></textarea>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label class="control-label">Tipo de evento</label>
                    </div>
                    <div class="col-sm-9">
                        <select class="form-control m-b-sm">
                            <option>Noticia</option>
                            <option>Tip</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" >Guardar</button>
            </div>
        </div>
    </div>
</div>
<!--Fin de Modal-->

<!--Empieza el Modal detalles-->
