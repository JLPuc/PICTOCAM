
@{
    Layout = "~/Views/Shared/layoutA.cshtml";
}

<div class="page-title">
    <div class="col-md-11">
        <h3>Eventos</h3>
    </div>

    <button class="btn btn-instagram" style="color:white; background-color:#4E5E6A;" title="Agregar" data-toggle="modal" data-target="#addMenu">Agregar</button>

</div>

<!--Modal para agregar-->
<div class="modal fade bs-example-modal-lg" id="addMenu" tabindex="-1" role="dialog" aria-labelledby="titleMenu" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="Evento">Crear Menú</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">Lunes</label>
                    <textarea class="form-control" rows="5" placeholder="Menú del lunes" id="lunes"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Martes</label>
                    <textarea class="form-control" rows="5" placeholder="Menú del martes" id="martes"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Miércoles</label>
                    <textarea class="form-control" rows="5" placeholder="Menú del miércoles" id="miercoles"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Jueves</label>
                    <textarea class="form-control" rows="5" placeholder="Menú del jueves" id="jueves"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Viernes</label>
                    <textarea class="form-control" rows="5" placeholder="Menú del viernes" id="viernes"></textarea>
                </div>
                <div class="col-md-12">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label">Fecha Inicio</label>
                            <input type="date" class="datepicker" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label">Fecha fin</label>
                            <input type="date" class="datepicker" />

                        </div>
                    </div>
                    
                </div>
                
            </div>
            <div class="modal-footer">
                <br />
                <div class="col-md-12">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn" style="background-color: #4E5E6A; color:white;">Guardar</button>
                </div>
               
            </div>
        </div>
    </div>
</div>
<!--Fin de modal para agregar-->

