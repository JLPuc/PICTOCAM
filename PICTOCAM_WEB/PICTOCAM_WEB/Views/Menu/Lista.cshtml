                    <textarea class="form-control" rows="5" placeholder="Menú del miércoles" id="miercoles"></textarea>
                </div>
                <div class="form-group">
                    <label class="control-label">Jueves</label>
                    <textarea class="form-control" rows="5" placeholder="Menú del jueves" id="jueves"></textarea>
