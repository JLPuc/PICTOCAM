@model List<PROYECTO.Models.ESCUELA>

@{
    ViewBag.Title = "Escuela";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@* Previsualizar imagenes *@
<script type="text/javascript">
        function imagepreview(input) {
            var fildr = new FileReader();
            fildr.onload = function (e) {
                $('#imgprw').attr('src', e.target.result);
            }
            fildr.readAsDataURL(input.files[0]);
        }
</script>

@using (Html.BeginForm())
{
    <div class="row clearfix">
        <div class="card">
            <div class="container">
                <div>
                    <div class="header">
                        <h1>Escuela</h1>
                    </div>
                    <div class="body">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12 header">

                                <div class="col-md-8">
                                    
                                    <div class="form-group">
                                        <h3>Imagen</h3>
                                        <div class="col-md-6">
                                            <img src="@Html.DisplayFor(modelItem => item.IMAGEN)" class="img-responsive thumbnail" width="500" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <h3>Dirección</h3>
                                        @Html.DisplayFor(modelItem => item.DIRECCION, new { @class = "form-control"})
                                    </div>

                                    <div class="form-group">
                                        <h3>Visión</h3>
                                        @Html.DisplayFor(modelItem => item.VISION, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <h3>Misión</h3>
                                        @Html.DisplayFor(modelItem => item.MISION, new { @class = "form-control" })
                                    </div>

                                    <div class="form-group">
                                        <h3>Historia</h3>
                                        @Html.DisplayFor(modelItem => item.HISTORIA, new { @class = "form-control" })
                                    </div>
                                    
                                    <div class="col-sm-10 form-line">
                                        <div class="col-sm-5">
                                            <div class="btn btn-primary btn-block">
                                                @Html.ActionLink("Editar", "EscuelaUpdate", new { id = item.ID_E }, new { @style = "color: #fff; text-decoration: none;" })
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}




