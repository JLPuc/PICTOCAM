@model PROYECTO.Models.TIPS
@{
    ViewBag.Title = "TipsDel";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>¿Está seguro de qué quiere borrar esto?</h2>

<div class="row clearfix">
    <div class="card">
        <div class="container">
            <div class="title" style="text-align:justify; width:990px">
                <h1><b>@Html.DisplayFor(model => model.TITULO)</b></h1>
            </div>
            <div class="image">
                <img class="img-responsive thumbnail" src="@Html.DisplayFor(model => model.IMAGEN)" width="990" />
            </div>
            <div style="width:990px;">
                <div style="text-align:justify; width:100%">
                    @Html.DisplayFor(model => model.CONTENIDO)
                </div>
            </div>
            <br />
        </div>
    </div>
</div>