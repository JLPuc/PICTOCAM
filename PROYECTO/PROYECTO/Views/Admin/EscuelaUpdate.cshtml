@model PROYECTO.Models.ESCUELA
@{
    ViewBag.Title = "EscuelaUpdate";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("EscuelaUpdate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Editar datos de la escuela</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_E)

        @*<div class="col-md-4">
                <img src="@Html.DisplayFor(model => model.IMAGEN)" class="img-responsive thumbnail" width="400" />
            </div>*@

        <div class="form-group">

            <div class="form-group">
                <img src="@Html.DisplayFor(model => model.IMAGEN)" class="img-responsive thumbnail" />
                @Html.EditorFor(model => model.IMAGEN, new { htmlAttributes = new { @class = "form-control", @style = "visibility: hidden;" } })
            </div>
        </div>


        <div class="form-line">
            <h3>Dirección</h3>
            @Html.TextBoxFor(model => model.DIRECCION, new { @class = "form-control" })
        </div>

        <div class="form-line">
            <h3>Visión</h3>
            @Html.TextBoxFor(model => model.VISION, new { @class = "form-control" })
        </div>


        <div class="form-line">
            <h3>Misión</h3>
            @Html.TextBoxFor(model => model.MISION, new { @class = "form-control" })
        </div>



        <div class="form-line">
            <h3>Historia</h3>
            @Html.TextAreaFor(model => model.HISTORIA, new { @class = "form-control no-resize", @rows = "12", @placeholder = "Contenido de la noticia" })
        </div>
        <div class="form-group">
            <div class="form-group">
                <center><input type="submit" value="Save" class="btn btn-lg bg-indigo" /></center>
            </div>
        </div>
    </div>

}
