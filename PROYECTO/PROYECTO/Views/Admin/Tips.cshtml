@model List<PROYECTO.Models.TIPS>
@{
    ViewBag.Title = "Tips";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm())
{
    <div class="row clearfix">
        <div class="card">
            <div class="container-fluid">
                <div class="col-md-12">
                    <div class="header">
                        <div class="header">
                            <h1>Tips</h1>
                            <i class="separator"></i>
                            <right><a href="@Url.Action("TipsAdd", "Admin")" class="btn btn-primary" style="float:right; width: 150px;">¡Agregar nuevo tip!</a></right>

                        </div>
                    </div>
                    <div class="body">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <img src="@Html.DisplayFor(modelItem => item.IMAGEN)" class="img-responsive thumbnail" width="500" />
                                </div>
                                <div class="col-md-6">
                                    <div class="title" style="text-align: justify; width:auto;"><h3>@Html.DisplayFor(modelItem => item.TITULO)</h3></div>
                                    <div class="body-content text-justify" style="width:auto;">@Html.DisplayFor(modelItem => item.DESCRIPCION)</div>
                                    <div class="col-md-12 form-line">
                                        <br />
                                        <div class="col-sm-5">
                                            <a class="btn btn-primary" style="width:100px;" href="@Url.Action("TipsEdit", "Admin", new { id = item.ID_T})" >Editar</a>
                                            
                                        </div>
                                        <div class="col-sm-5">
                                            <a class="btn btn-danger" style="width:100px;" href="@Url.Action("Eliminar", "Admin", new { id = item.ID_T})">Eliminar</a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

    
