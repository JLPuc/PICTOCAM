@model IEnumerable<PROYECTO.Models.NOTICIAS>
@{
    Layout = "~/Views/Shared/LayoutF.cshtml";
}
<link href="~/ResourcesF/css/Tablas.css" rel="stylesheet" />
<link href="~/ResourcesF/css/slippry.css" rel="stylesheet" />
<link href="~/ResourcesF/css/owl.carousel.css" rel="stylesheet" />
<script src="~/ResourcesF/js/owl.carousel.js"></script>
<script>
			$(document).ready(function() {
				$("#owl-demo").owlCarousel({
					items : 4,
					lazyLoad : true,
					autoPlay : true,
					navigation : true,
					navigationText : ["", ""],
					rewindNav : false,
					scrollPerPage : false,
					pagination : false,
					paginationNumbers : false,
				});
			});
</script>
<!-- //Owl Carousel Assets -->
<link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css" />
<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>

<script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false&libraries=places&key=AIzaSyBN5HQEgifKCN5mq9cqkHQ7biWnKGusKok"></script>
<script src="~/Resources/js/locationpicker.jquery.js"></script>
<!---start-banner---->
<div class="banner" id="move-top">
    <!----start-image-slider---->
    <div data-scroll-reveal="enter bottom but wait 0.7s" class="img-slider" id="home">
        <div class="wrap">
            <div class="slider">
                <ul id="jquery-demo">
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="#slide">
                            </a>
                            <div>
                                <center><img src="@Html.DisplayFor(modelItem => item.IMAGEN)" height="560" class="img-slider" /></center>
                                <div data-scroll-reveal="enter bottom but wait 0.7s" class="slider-detils">
                                    <h3><a href="@Url.Action("NoticiasID", "Usuario", new { id = item.ID_N })" style="text-decoration:none; color:white;">@Html.DisplayFor(modelItem => item.TITULO, new { @class = "form-control" })</a></h3>
                                    <span>@Html.DisplayFor(modelItem => item.DESCRIPCION, new { @class = "form-control" })</span>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="clear"> </div>
    

    <div class="last_posts">
        <!-- start last_posts -->
        <div class="wrap">
            <h5 class="heading">Metodologías</h5>
            <div class="l-grids">
                <div class="l-grid-1">
                    <div class="desc">
                        <h3>PECS</h3>
                        <p>
                            El sistema de comunicación por intercambio de imágenes, PECS (Picture Exchange Communication System) es un sistema aumentativo y/o alternativo de comunicación que utiliza como modalidad comunicativa las imágenes.
                            
                        </p>
                    </div>
                    <img src="images/im1.jpg">
                    <div class="clear"> </div>
                </div>
                <div class="l-grid-1 l-grid-2">
                    <div class="desc">
                        <h3>Discapacidades con las que se trabaja</h3>
                        <p>
                            <ul>
                                <!-- Prueba index admin -->
                                <li>Síndrome de Down<D/li>
                                <li>Autismo</li>
                                <li>Transtorno de déficit de atención</li>
                                <li>Esclerosis múltiple</li>
                            </ul>
                        </p>
                        
                    </div>
                    <img src="images/im.jpg">
                    <div class="clear"> </div>
                </div>
                
                <div class="clear"> </div>
            </div>
        </div>
    </div>
    

    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <div id="ModalMapPreview" style="width:100%; height: 400px;"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <input type="text" id="txtLat" value="20.941659" class="control-label" style="visibility:hidden">
                    </div>
                    <div class="col-sm-6">
                        <input type="text" id="txtLgt" value="-89.6157641" class="control-label" style="visibility:hidden">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!---slider---->
<link href="~/ResourcesF/css/slippry.css" rel="stylesheet" />
<script src="~/ResourcesF/js/jquery-ui.js"></script>
<script src="~/ResourcesF/js/scripts-f0e4e0c2.js"></script>
<script>
	jQuery('#jquery-demo').slippry({
	// general elements & wrapper
	slippryWrapper: '<div class="sy-box jquery-demo" />', // wrapper to wrap everything, including pager
	// options
	adaptiveHeight: false, // height of the sliders adapts to current slide
	useCSS: false, // true, false -> fallback to js if no browser support
	autoHover: false,
	transition: 'fade'
	});
</script>

<script>
        $("#ModalMapPreview").locationpicker({
            radius: 0,
            location: {
                longitude: $("#txtLgt").val(),
                latitude: $("#txtLat").val()
            },
            inputBinding: {
                latitudeInput: $("#txtLat"),
                longitudeInput: $("#txtLgt")
            },
            enableAutocomplete: true
        });
</script>
<!---scrooling-script--->
<!----//End-image-slider---->

